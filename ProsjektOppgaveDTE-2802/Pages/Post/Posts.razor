@page "/posts/{BlogId}"
@using ProsjektOppgaveDTE_2802.Models
@inject HttpClient BlogHttpClient
@inject NavigationManager NavigationManager

<h3>Posts</h3>

<a class="btn btn-primary" href="post">Create</a>

@if (posts == null) 
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table" >
    <thead>
    <tr>
        <th>Title</th>
        <th>Content</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var post in posts)
    {
        <tr>
            <td>@post.Title</td>
            <td>@post.Content</td>
            <td><a href="comments/@post.PostId">View</a></td>
            <td><a href="post/@post.PostId">Edit</a></td>
            <td><a href="posts" @onclick="@(e =>DeleteBlog(post.PostId))">Delete</a></td>
        </tr>
    }
    </tbody>
    </table>
}

@code {
    [Parameter]
    public string BlogId { get; set; }
    private Post[] posts;

    protected override async Task OnInitializedAsync()
    {
        posts = await BlogHttpClient.GetFromJsonAsync<Post[]>($"https://localhost:7022/api/Post?blogId={BlogId}");
    }

    private async Task DeleteBlog(int id)
    {
        var response = await BlogHttpClient.DeleteAsync($"https://localhost:7022/api/Post/{id}");
    }
}
