@page "/blogs"
@inject IJSRuntime JsRuntime

<h3>Blogs</h3>

@if (_blogs == null) 
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table" >
    <thead>
    <tr>
        <th>Name</th>
        <th>Owner</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var blog in _blogs)
    {
        <tr>
            <td><a href="posts/@blog.BlogId" style="text-decoration:none;  color:inherit;">@blog.Name</a></td>
            <td>@blog.Owner.Email</td>
            <td><a href="blog/@blog.BlogId">Edit</a></td>
            <td><a href="blogs" @onclick="@(e =>ConfirmDelete(blog.BlogId))">Delete</a></td>
        </tr>
    }
    </tbody>
    </table>
}

<a class="btn btn-primary" href="blog">Create Blog</a>

@code {
    private Blog[]? _blogs;

    protected override async Task OnInitializedAsync()
    {
        _blogs = await HttpClient.GetFromJsonAsync<Blog[]>("/api/Blog");
    }

    private async Task DeleteBlog(int id)
    {
        var response = await HttpClient.DeleteAsync($"/api/Blog/{id}");
    }
    
    private async Task ConfirmDelete(int id)
    {
        var confirmed = await JsRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this blog?");
        if (confirmed)
        {
            await DeleteBlog(id);
        }
    }
}
